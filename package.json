{
  "name": "phx",
  "version": "1.0.0",
  "description": "Brighton Phoenix",
  "type": "module",
  "scripts": {
    "build:css": "postcss --config postcss.config.js frontend/css/site.css --output frontend/static/css/site.css",
    "build:admin-css": "postcss --config postcss.config.js frontend/css/admin.css --output frontend/static/css/admin.css",
    "build:js": "webpack --config webpack.config.js",
    "build:templates": "node scripts/build-templates.js",
    "build": "npm-run-all build:*",
    "lint:css": "stylelint --config stylelint.config.cjs \"frontend/components/**/*.css\" && stylelint --config stylelint.config.cjs \"frontend/css/**/*.css\"",
    "lint:js": "eslint --config eslint.config.js frontend/components/ frontend/js/",
    "lint": "npm-run-all lint:*",
    "prepare": "husky install",
    "watch:css": "npm run build:css -- --watch",
    "watch:admin-css": "npm run build:admin-css -- --watch",
    "watch:js": "npm run build:js -- --watch",
    "watch:templates": "npm run build:templates && chokidar 'frontend/**/*.html' 'frontend/**/*.json' -c 'npm run build:templates'",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "chokidar-cli": "^3.0.0",
    "cli-color": "^2.0.4",
    "cpx2": "^7.0.1",
    "cssnano": "^7.0.2",
    "del": "^7.1.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "npm-check-updates": "^16.14.20",
    "npm-run-all": "^4.1.5",
    "postcss-calc": "^10.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-custom-media": "^10.0.6",
    "postcss-custom-properties": "^13.3.10",
    "postcss-easy-import": "^4.0.0",
    "prettier": "^3.3.1",
    "stylelint": "^16.6.1",
    "stylelint-config-suitcss": "^21.0.0",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "iframe-resizer": "^4.4.2",
    "normalize.css": "^8.0.1",
    "suitcss-base": "^5.0.0"
  }
}
